<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rui.sys.dao.RoleDao">

    <sql id="roleColumns">
		a.id,
		a.name
	</sql>

    <sql id="roleJoins">

    </sql>

    <select id="get" resultType="Role">
        SELECT
        <include refid="roleColumns"/>
        FROM role a
        <include refid="roleJoins"/>
        WHERE a.id = #{id}
    </select>

    <select id="findList" resultType="Role">
        SELECT
        <include refid="roleColumns"/>
        FROM role a
        <include refid="roleJoins"/>
        WHERE 1 = 1
    </select>

    <select id="findAllList" resultType="Role">
        SELECT
        <include refid="roleColumns"/>
        FROM role a
        <include refid="roleJoins"/>
    </select>

    <insert id="insert">
		INSERT INTO role(
			id,
			name
		) VALUES (
			#{id},
			#{name}
		)
	</insert>

    <update id="update">
		UPDATE role SET
			name = #{name}
		WHERE id = #{id}
	</update>


    <update id="delete">
        DELETE FROM role
        WHERE id = #{id}
    </update>
</mapper>